# Fashion AI App - Environment Variables
# Copy this file to .env and update with your actual values

# Project Metadata
PROJECT_NAME=Fashion AI API
VERSION=0.1.0
API_V1_STR=/api/v1

# CORS Configuration
# Comma-separated list of allowed origins
BACKEND_CORS_ORIGINS=http://localhost:3000,http://localhost:8000

# Database
# Option A: provide full URL (overrides the parts below)
DATABASE_URL_OVERRIDE=postgresql://postgres:postgres@localhost:5432/fashion_app
# Option B: leave override empty and use parts to build URL
POSTGRES_SERVER=localhost
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=fashion_app
POSTGRES_PORT=5432

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0

# Storage Directories
UPLOAD_DIR=data/runtime/uploads
PROCESSED_DIR=data/runtime/processed

# OpenAI API (for Phase 4 - Chatbot)
# Get your API key from https://platform.openai.com/api-keys
OPENAI_API_KEY=
